<openerp>
    <data>

        <!-- Leave Request -->
        <record id="group_leave_request_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="hr_holiday_batch.module_leave_request"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_leave_request_department" model="res.groups">
            <field name="name">Department</field>
            <field name="category_id" ref="hr_holiday_batch.module_leave_request_visibility"/>
        </record>

        <record id="group_leave_request_company" model="res.groups">
            <field name="name">Company</field>
            <field name="category_id" ref="hr_holiday_batch.module_leave_request_visibility"/>
            <field name="implied_ids" eval="[(4, ref('group_leave_request_department'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!-- Allocation Request -->
        <record id="group_allocation_request_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="hr_holiday_batch.module_allocation_request"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_allocation_request_department" model="res.groups">
            <field name="name">Department</field>
            <field name="category_id" ref="hr_holiday_batch.module_allocation_request_visibility"/>
        </record>

        <record id="group_allocation_request_company" model="res.groups">
            <field name="name">Company</field>
            <field name="category_id" ref="hr_holiday_batch.module_allocation_request_visibility"/>
            <field name="implied_ids" eval="[(4, ref('group_allocation_request_department'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

    </data>
</openerp>
