<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_holiday_batch_allocation_request_view_tree" model="ir.ui.view">
            <field name="name">hr.holiday_batch_allocation_request.tree</field>
            <field name="model">hr.holiday_batch_allocation_request</field>
            <field name="arch" type="xml">
                <tree string="Batch Allocation Request">
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="holiday_status_id"/>
                    <field name="number_of_days"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="hr_holiday_batch_allocation_request_view_form" model="ir.ui.view">
            <field name="name">hr.holiday_batch_allocation_request.form</field>
            <field name="model">hr.holiday_batch_allocation_request</field>
            <field name="arch" type="xml">
                <form string="Batch Allocation Request">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible':['|',('state','!=','draft'),('confirm_ok','=',False)]}"/>
                        <button name="action_valid" type="object" string="Approve" class="oe_highlight" attrs="{'invisible':['|',('state','!=','confirm'),('valid_ok','=',False)]}"/>
                        <button name="action_refuse" type="object" string="Refuse" attrs="{'invisible':['|',('state','not in',['draft','confirm','validate']),('refuse_ok','=',False)]}"/>
                        <button name="action_restart" type="object" string="Restart" attrs="{'invisible':['|',('state', 'not in', ['confirm', 'refuse']),('restart_ok','=',False)]}"/>
                        <button
                            name="%(hr_holiday_by_employee_view_action)d"
                            type="action"
                            string="Generate Allocation Request"
                            class="oe_highlight"
                            context="{'department_id': department_id}"
                            attrs="{'invisible':['|',('state', '!=', 'draft'),('generate_ok','=',False)]}"
                        />
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,valid"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group name="group_1" colspan="4" col="2">
                            <group name="group_1_1" colspan="1" col="2">
                                <field name="number_of_days"/>
                            </group>
                            <group name="group_1_2" colspan="1" col="2">
                                <field name="company_id"/>
                                <field name="department_id"/>
                                <field name="holiday_status_id"/>
                                <field name="type" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="allocation_request" string="Request(s)">
                                <field name="request_ids" colspan="4" nolabel="1"/>
                            </page>
                            <page name="allocation_policy" string="Policy" groups="base.group_system">
                                <group name="group_policy_1" colspan="4" col="2">
                                    <field name="confirm_ok"/>
                                    <field name="valid_ok"/>
                                    <field name="refuse_ok"/>
                                    <field name="cancel_ok"/>
                                    <field name="generate_ok"/>
                                    <field name="restart_ok"/>
                                </group>
                            </page>
                            <page name="allocation_log" string="Log" groups="base.group_system">
                                <group name="group_log_1" colspan="4" col="3">
                                    <field name="create_date" string="Creation"/>
                                    <field name="create_uid" nolabel="1"/>
                                    <field name="confirmed_date" string="Confirmation"/>
                                    <field name="confirmed_user_id" nolabel="1"/>
                                    <field name="validated_date" string="Validation"/>
                                    <field name="validated_user_id" nolabel="1"/>
                                    <field name="refused_date" string="Refused"/>
                                    <field name="refused_user_id" nolabel="1"/>
                                    <field name="cancelled_date" string="Cancellation"/>
                                    <field name="cancelled_user_id" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_holiday_batch_allocation_request_view_search" model="ir.ui.view">
            <field name="name">hr.holiday_batch_allocation_request.search</field>
            <field name="model">hr.holiday_batch_allocation_request</field>
            <field name="arch" type="xml">
                <search string="Search Batch Allocation Request">
                    <field name="name"/>
                    <field name="number_of_days"/>
                    <filter icon="terp-document-new" string="Draft" domain="[('state','=','draft')]" help="Draft Request"/>
                    <filter name="done_filter" icon="terp-camera_test" string="Done" domain="[('state','=','close')]" help="Done Request"/>
                </search>
            </field>
        </record>

        <record id="hr_holiday_batch_allocation_request_action" model="ir.actions.act_window">
            <field name="name">Batch Allocation Request</field>
            <field name="res_model">hr.holiday_batch_allocation_request</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_holiday_batch_allocation_request_view_search"/>
            <field name="context">{'default_type': 'add'}</field>
        </record>

        <menuitem 
            id="hr_holiday_batch_allocation_request_menu"
            name="Batch Allocation Request" 
            parent="hr_holidays.menu_open_ask_holidays"
            action="hr_holiday_batch_allocation_request_action"
            sequence="100"/>
            
    </data>
</openerp>
